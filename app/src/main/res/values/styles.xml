<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/dark_grey</item>
        <item name="colorAccent">@color/watermelon_red</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:fontFamily">@font/bebas_neue_regular</item>

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_bottom_sheet_bg</item>
    </style>

    <style name="AppTheme.TextStyle">
        <item name="android:fontFamily">@font/bebas_neue_regular</item>
    </style>

    <style name="AppTheme.TextValueStyle">
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="AppTheme.TextType" parent="AppTheme.TextStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="AppTheme.TextTitle" parent="AppTheme.TextStyle">
        <item name="android:textSize">@dimen/text_size_very_big</item>
    </style>

    <style name="AppTheme.TextSplash" parent="AppTheme.TextStyle">
        <item name="android:textSize">@dimen/text_size_very_splash</item>
    </style>

    <style name="AppTheme.TextTitleStat" parent="AppTheme.TextStyle">
        <item name="android:textSize">@dimen/text_size_medium_big</item>
    </style>

    <style name="AppTheme.TextValueStat" parent="AppTheme.TextValueStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="AppTheme.TextValueError" parent="AppTheme.TextValueStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>



</resources>
